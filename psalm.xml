<?xml version="1.0"?>
<psalm errorLevel="1"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="https://getpsalm.org/schema/config"
       cacheDirectory="/tmp/decode-psalm"
       xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd">
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <InternalClass>
            <errorLevel type="suppress">
                <directory name="psalm"/>
            </errorLevel>
        </InternalClass>
        <InternalMethod>
            <errorLevel type="suppress">
                <directory name="psalm"/>
            </errorLevel>
        </InternalMethod>
    </issueHandlers>
    <plugins>
        <pluginClass class="Fp\Psalm\PartialFunctionReturnTypeProvider"/>
        <pluginClass class="Fp\Psalm\PartitionFunctionReturnTypeProvider"/>
        <pluginClass class="Fp\Psalm\PluckFunctionReturnTypeProvider"/>
        <pluginClass class="Fp\Psalm\OptionGetOrElseMethodReturnTypeProvider"/>
        <pluginClass class="Fp\Psalm\ProveTrueExpressionAnalysis"/>

        <pluginClass class="Klimick\PsalmDecode\Plugin"/>
        <pluginClass class="Klimick\PsalmShowType\ShowTypePlugin"/>

        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
    </plugins>
</psalm>
