<?xml version="1.0"?>
<psalm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="https://getpsalm.org/schema/config"
       errorLevel="1"
       findUnusedPsalmSuppress="true"
       cacheDirectory="/tmp/decode-psalm"
       ensureArrayStringOffsetsExist="true"
       ensureArrayIntOffsetsExist="true"
       xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd">
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Klimick\PsalmDecode\Plugin">
            <derived-props-mixin-path>dev</derived-props-mixin-path>
            <derived-props-mixin-namespace>Psalm\Mixins</derived-props-mixin-namespace>
        </pluginClass>
        <pluginClass class="Klimick\PsalmShowType\ShowTypePlugin"/>
        <pluginClass class="Klimick\PsalmTest\Integration\Plugin"/>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Fp\Psalm\FunctionalPlugin"/>
    </plugins>
</psalm>
